@{
    int hostId = (int) ViewData["hostId"];
}
@model MySocialNetwork.DTO.InputPostDto
<div>
    @using (Ajax.BeginForm("PostComment", new {wallId = Model.WallId, hostId = hostId}, new AjaxOptions(){UpdateTargetId = "wall"}, new {enctype="multipart/form-data"}))
    {
        if (!Model.OnlyImage)
        {
            <div>
                <p>
                    @Html.Label("Input your message: ")
                    @Html.TextAreaFor(model => model.Text)
                </p>
            </div>
        }
        <div>
            <input type="file" name="Media"/>
        </div>
        <div>
            <input type="submit" value="Post"/>
        </div>
    }
</div>
